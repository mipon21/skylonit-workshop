APP_NAME="Skylon-IT WorkShop"
APP_LOGO=
# Guest portal: WhatsApp floating button. E.g. 8801712345678 (no + or spaces). Used in https://wa.me/NUMBER
WHATSAPP_NUMBER=
APP_ENV=local
APP_KEY=
APP_DEBUG=true
# Must be your public site URL (e.g. https://yourdomain.com) for email logos/links to work
APP_URL=http://localhost
# Application timezone (e.g. Asia/Dhaka for Bangladesh GMT+6)
APP_TIMEZONE=Asia/Dhaka

# Lock Add/Delete payments after Final Payment (true=production, false=development)
PAYMENT_LOCK_AFTER_FINAL=false

# UddoktaPay / Paymently (payment links). Leave empty to create payments without link; use "Mark as Paid (Cash)" instead.
# Base URL is used for both checkout and verify-payment (POST). Examples:
#   Sandbox:  https://sandbox.uddoktapay.com
#   Paymently: https://skylon-it.paymently.io
UDDOKTAPAY_BASE_URL=https://sandbox.uddoktapay.com
UDDOKTAPAY_API_KEY=
# Optional: use if your gateway has different paths (e.g. Paymently checkout is /api/checkout)
# UDDOKTAPAY_CHECKOUT_PATH=/api/checkout
# Verify is always POST to {base_url}/api/verify-payment unless overridden:
# UDDOKTAPAY_VERIFY_PATH=/api/verify-payment

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
# Use "database" or "redis" for queued mail; run: php artisan queue:work
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"
# Optional: comma-separated addresses that always receive client bug reports (in addition to admin users and MAIL_FROM_ADDRESS).
# MAIL_BUG_NOTIFICATION_TO=support@example.com

# Email footer (shown on all notification emails). Override in Settings > Email Footer.
# MAIL_FOOTER_EMAIL=info@skylon-it.com
# MAIL_FOOTER_PHONE=+8801783197788
# MAIL_FOOTER_WEBSITE=https://www.skylon-it.com
# MAIL_FOOTER_FACEBOOK=https://facebook.com/skylonit
# MAIL_FOOTER_WHATSAPP=8801743233833
# MAIL_FOOTER_TAGLINE=Thank you for staying with us.
# Icon base URL (default: Icons8 CDN). For self-hosted icons, set to your domain, e.g. https://yoursite.com/images/email-icons
# MAIL_FOOTER_ICON_BASE=https://img.icons8.com/fluency/24
# If website/globe icon does not show, set a direct URL for it:
# MAIL_FOOTER_ICON_GLOBE=https://yoursite.com/images/email-icons/globe.png

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Google Sheets bi-directional sync (optional). ERP is source of truth for revenue.
GOOGLE_SHEETS_SYNC_ENABLED=false
GOOGLE_SHEETS_SPREADSHEET_ID=
# Or use GOOGLE_SHEET_ID (alias), GOOGLE_CLIENT_EMAIL + GOOGLE_PRIVATE_KEY for inline credentials
GOOGLE_SHEET_ID=
GOOGLE_CLIENT_EMAIL=
GOOGLE_PRIVATE_KEY=
# Path to Service Account JSON key (default: storage/app/google-credentials.json)
GOOGLE_SHEETS_CREDENTIALS=

# Firebase Cloud Messaging (FCM) — push notifications for client portal
# Backend HTTP v1 (recommended): Project Settings → Service accounts → Generate new private key;
# set project_id, client_email, private_key from the JSON (private_key with \n for newlines).
FCM_PROJECT_ID=
FCM_CLIENT_EMAIL=
FCM_PRIVATE_KEY=
# Legacy fallback only (if Legacy API still enabled): Cloud Messaging → Server key
FCM_SERVER_KEY=
# Web client config: Firebase Console → Project Settings → General → Your apps (Web app)
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
# Web Push: Firebase Console → Cloud Messaging → Web configuration → Web Push certificates (generate key pair)
FIREBASE_VAPID_KEY=
